<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bai"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/pop_head"
        android:src="@mipmap/u2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="100dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/pop_price"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/pop_head"
        app:layout_constraintLeft_toRightOf="@+id/pop_head"
        android:layout_marginLeft="10dp"
        android:text="价格：￥199"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="已选择：请选择规格数量"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/pop_head"
        app:layout_constraintTop_toBottomOf="@+id/pop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/pop_exit"
        android:src="@mipmap/cha"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="15dp"
        android:layout_height="15dp"/>
    <TextView
        android:id="@+id/pop_sl"
        app:layout_constraintTop_toBottomOf="@id/pop_head"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="数量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.example.myapplication.commit.CartView
        android:id="@+id/pop_cart"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/pop_sl"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_custom_cart"/>
    </com.example.myapplication.commit.CartView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>