<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.my.activity.SiteActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/site_rlv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/head_site"
        android:visibility="gone"
        android:drawableTop="@mipmap/dizh128i"
        android:text="收货地址在哪里"
        app:layout_constraintTop_toBottomOf="@+id/site_rlv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/establish"
        android:background="@color/Red_s"
        android:text="新建"
        android:textSize="22dp"
        android:gravity="center"
        android:textColor="@color/bai"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>